<Page x:Class="Typer.Pages.ScorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Typer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ScorePage">

    <Grid Background="White">
        <DataGrid Height="auto" Width="auto" HorizontalAlignment="Center" Name="ScoreTable" VerticalAlignment="Center" BeginningEdit="ScoreTable_BeginningEdit" CellEditEnding="ScoreTable_CellEditEnding" PreviewKeyDown="ScoreTable_PreviewKeyDown"/>
        <Button Name="SaveExitButton" Content="Save and exit" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="SaveExitButton_Click" Margin="10,0,0,10"/>

    </Grid>
</Page>
